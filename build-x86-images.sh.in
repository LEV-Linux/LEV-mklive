#!/bin/sh

ARCH=
IMAGE=

while getopts "a:b:hr:" opt; do
case $opt in
	a) ARCH="$OPTARG";;
	b) IMAGE="$OPTARG";;
	h) echo "${0#/*}: [-a arch] [-b full|minimal] [-r repo]" >&2; exit 1;;
	r) REPO="-r $OPTARG $REPO";;
esac
done
shift $((OPTIND - 1))

: ${ARCH:=$(uname -m)}
: ${SH:="/bin/zsh"}

readonly DATE=$(date +%Y%m%d)
readonly FULL_IMG=LEV-live-${ARCH}-${DATE}-full.iso
readonly MINIMAL_IMG=LEV-live-${ARCH}-${DATE}-minimal.iso

readonly TITLE="LEV Linux"

readonly GRUB="grub-i386-efi grub-x86_64-efi"

readonly BASE_PKGS="dialog cryptsetup lvm2 mdadm void-docs-browse $GRUB"
readonly X_PKGS="$BASE_PKGS xorg-minimal xorg-input-drivers xorg-video-drivers setxkbmap xauth font-misc-misc terminus-font dejavu-fonts-ttf alsa-plugins-pulseaudio"
readonly MINIMAL_PKGS="$X_PKGS zsh zsh-autosuggestions zsh-syntax-highlighting neovim htop git opendoas nnn fzf wget make gcc brillo kmonad xtools ffmpeg mpv"
readonly FULL_PKGS="$MINIMAL_PKGS sxiv ImageMagick bottom task timewarrior picom make pywal xwinwrap sxhkd libX11-devel libXinerama-devel libXft-devel fontconfig-devel font-awesome xdotool xdo qutebrowser zathura"

[ ! -x mklive.sh ] && exit 0

if [ -z "$IMAGE" -o "$IMAGE" = full ]; then
	if [ ! -e $FULL_IMG ]; then
		./mklive.sh -a "$ARCH" -o "$FULL_IMG" -T "$TITLE" -p "$FULL_PKGS" ${REPO} -C "live live.autologin=1" "$@"
	fi
fi
if [ -z "$IMAGE" -o "$IMAGE" = minimal ]; then
	if [ ! -e $MINIMAL_IMG ]; then
		./mklive.sh -a "$ARCH" -o "$MINIMAL_IMG" -T "$TITLE" -p "$MINIMAL_PKGS" ${REPO} -C "live live.autologin=1" "$@"
	fi
fi
